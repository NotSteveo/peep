{
  "manifest_version": 3,
  "name": "PEEP - Focused Browsing",
  "version": "0.1.0",
  "description": "Block distracting sites with a wait timer, limited visits, and per-visit time caps.",
  "permissions": [
    "alarms",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "PEEP"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "utils.js",
        "content.js"
      ],
      "css": [
        "overlay.css"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*.ttf"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}